<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }

    @RenderSection("AddToHeadAnotherWay", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <a class="navbar-brand" href="@Url.Action("Accueil","Home")">

            <img src="@Url.Content("~/Images/General/logo-afpa.jpg")" height="30" alt="logo">
            Afp<b style="color:#44a33d">Eats</b>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-list-3" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar-list-3">
            <ul class="navbar-nav">
                <li class="nav-">
                    <a class="nav-item nav-link" href="@Url.Action("Accueil","Home")"><i class="fa fa-home"></i>Accueil</a>
                </li>
                <li class="nav-">
                    <a class="nav-item nav-link" href="@Url.Action("Index","Produits")"><i class="fa fa-cutlery"></i>Produits</a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-">
                    <a class="nav-item nav-link" href="@Url.Action("Panier","Home")">Panier</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
